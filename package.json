        "@types/jquery": "^3.5.1",
        "@types/node": "^14.0.14",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "electron": "^10.1.1",
        "electron-builder": "^22.8.0",
        "eslint": "^7.4.0",
        "jest": "^26.0.1",
        "typescript": "^3.9.2"
